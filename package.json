{
  "name": "injured-workers-unite",
  "version": "2.0.0",
  "description": "Digital nation-state sanctuary for injured workers - THE EYE investigative system",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:client": "next dev -p 3000",
    "build": "npm run fetch:real && npm run generate:sitemap && npm run generate:rss && npm run generate:viral && next build",
    "build:static": "cross-env STATIC_EXPORT=true npm run build",
    "start": "next start",
    "lint": "next lint",
    "fetch:real": "node scripts/fetch-real-data.js",
    "fetch:all": "npm run fetch:real && npm run blog:generate && npm run oracle:generate",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "generate:rss": "node scripts/generate-rss.js",
    "generate:viral": "node scripts/generate-viral-content.js",
    "blog:generate": "node scripts/generate-daily-blog-post.js",
    "blog:preview": "echo 'Blog posts:' && node -p 'require(\"./public/data/blog-posts.json\").slice(0,3).map(p => `${p.date}: ${p.title}`).join(\"\\n\")'",
    "eye:init": "node scripts/initialize-system.js",
    "eye:scan": "node scripts/scan-government-data.js && node scripts/scan-legislation.js",
    "eye:scan:gov": "node scripts/scan-government-data.js",
    "eye:scan:bills": "node scripts/scan-legislation.js",
    "eye:analyze": "node scripts/run-analysis-pipeline.js",
    "eye:summary": "node scripts/generate-daily-summary.js",
    "eye:notify": "node scripts/send-telegram-summary.js",
    "eye:daily": "npm run fetch:real && npm run eye:analyze && npm run eye:summary && npm run eye:notify",
    "eye:migrate": "node -e \"fetch('http://localhost:3000/api/migrate', {method:'POST'}).then(r=>r.json()).then(console.log)\"",
    "oracle:generate": "node scripts/generate-eye-oracle-daily.js",
    "viral:calendar": "node utils/social-content-calendar.js",
    "viral:hooks": "node scripts/generate-eye-oracle-daily.js",
    "viral:analytics": "node utils/social-analytics-tracker.js --report",
    "viral:status": "node utils/social-analytics-tracker.js --status",
    "viral:sample": "node utils/social-analytics-tracker.js --sample",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "cheerio": "^1.1.2",
    "jszip": "^3.10.1",
    "next": "^15.0.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "wrangler": "^4.48.0"
  }
}
